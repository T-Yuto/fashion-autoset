<span class="setting">
  <% if user_signed_in? %>
    <div class="vertical_index">
      <div class="setting_image upper-image">
        <%= image_tag @related_upper_image.upper_image.url %>
      </div>
      <div class ="setting_image down-image">
        <%= image_tag @related_down_image.down_image.url %>
      </div>
      <div class="set_btn" id="set_btn_bottom">
        <button type="button" value="change_btn" class="change_btn"><a href="/">CHANGE</a></button>
      </div>
    </div>
    <div class="set_btn" id="set_btn_right">
      <button type="button" value="change_btn" class="change_btn"><a href="/">CHANGE</a></button>
    </div>
  <%else%>
    <div>
    </div>
  <% end %>
</span>
