<!DOCTYPE html>
<html>
  <head>
    <title>FashionAutoset</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <% if user_signed_in?%>
          <div class="user_nav grid-6">
            <span>
              <ul class="user__info">
                <li>
                  <%= link_to "ユーザー名： #{current_user.name}", root_path%>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
                </li>
              </ul>
            </span> 
          </div>
          <div class="dropdown">
            <ul class="dropdown_btn">
              <button class="dropdown_btn menu_btn">MENU</button>
              <li class="menulist">
                <button class="menu edit_btn"><a href="/">トップへ</a></button>
                <button class="menu mypage_btn"><a href="/users/<%= current_user.id %>">マイページ</a></button>
                <button class="menu new_btn"><a href="/images/new">登録</a></button>
              </li>
            </ul>
          </div>
        <% else %>
          <div class="grid-6">
            <span>
              <ul class="user__info">
                <li>
                  <%= link_to "ログイン", new_user_session_path, class: 'post' %>
                  <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
                </li>
              </ul>
            </span> 
          </div>
        <% end%>
      </div>
    </header>
    <div class="body">
    <div class="main">
    <%= yield %>
    </div>
    </div>
<div class="footer">Fashion Auto Setting.</div>
  </body>
</html>
