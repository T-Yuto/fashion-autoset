<!DOCTYPE html>
<html>
  <head>
    <title>FashionAutoset</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <% if user_signed_in?%>
        <div class="user_nav grid-6">
          <span>
            <ul class="user__info">
              <li>
                <%= link_to "#{current_user.name}", root_path%>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
              </li>
            </ul>
          </span> 
        </div>
        <div class="dropdown">
          <ul class="dropdown_btn">
            <li class="change">
              <%=link_to "MENU", images_path%>
              <%=link_to "登録", new_image_path%>
            <%# <li class="front-back">前後切替</li>
            <li class="star">お気に入り</li>
            <li class="edit">編集</li> %>
          </ul>
        </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: 'post' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
          </div>
        <% end%>
      </div>
    </header>
    <div class="body">
    <div class="main">
    <%= yield %>
    </div>
    </div>
<div class="footer">Fashion Auto Setting.</div>
  </body>
</html>
